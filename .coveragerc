# Coverage configuration for ai_sdlc_method
# Implements: REQ-NFR-QUALITY-001 (Code Quality Standards)

[run]
# Source directories to measure
source =
    claude-code/tests
    gemini-code/installers

# Omit test files themselves from coverage
omit =
    */tests/*
    */__pycache__/*
    */conftest.py
    */setup.py

# Branch coverage
branch = True

# Parallel mode for combining coverage data
parallel = True

[report]
# Minimum coverage percentage required
fail_under = 80

# Show lines missing coverage
show_missing = True

# Exclude lines from coverage
exclude_lines =
    # Have to re-enable the standard pragma
    pragma: no cover

    # Don't complain about missing debug-only code
    def __repr__

    # Don't complain if tests don't hit defensive assertions
    raise AssertionError
    raise NotImplementedError

    # Don't complain if non-runnable code isn't run
    if __name__ == .__main__.:

    # Don't complain about abstract methods
    @abstractmethod

    # Don't complain about type checking blocks
    if TYPE_CHECKING:

# Precision for coverage percentages
precision = 1

[html]
# Output directory for HTML reports
directory = htmlcov

# Title for HTML report
title = AI SDLC Method Test Coverage

[xml]
# Output file for XML coverage report (CI/CD)
output = coverage.xml
