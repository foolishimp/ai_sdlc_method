{
  "_implements": "REQ-TOOL-006 (Methodology Hooks), REQ-SENSE-006, REQ-LIFE-008",
  "_reference": "ADR-011 (Consciousness Loop), ยง7.7.5 (Bypass Detection)",
  "_note": "PostEvent is not a real Claude Code hook type. Dev-observer trigger must be agent-driven, not hook-driven.",
  "hooks": {
    "SessionStart": [
      {
        "hooks": [
          {
            "type": "command",
            "command": "${CLAUDE_PLUGIN_ROOT}/hooks/on-session-start.sh",
            "statusMessage": "Running workspace health check..."
          }
        ]
      }
    ],
    "UserPromptSubmit": [
      {
        "hooks": [
          {
            "type": "command",
            "command": "${CLAUDE_PLUGIN_ROOT}/hooks/on-iterate-start.sh",
            "statusMessage": "Setting edge traversal context..."
          }
        ]
      }
    ],
    "PostToolUse": [
      {
        "matcher": "Write|Edit",
        "hooks": [
          {
            "type": "command",
            "command": "${CLAUDE_PLUGIN_ROOT}/hooks/on-artifact-written.sh",
            "statusMessage": "Observing artifact write..."
          }
        ]
      }
    ],
    "Stop": [
      {
        "hooks": [
          {
            "type": "command",
            "command": "${CLAUDE_PLUGIN_ROOT}/hooks/on-stop-check-protocol.sh",
            "statusMessage": "Checking iterate protocol completion..."
          }
        ]
      }
    ]
  }
}
