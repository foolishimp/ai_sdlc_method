{
  "_implements": "REQ-TOOL-006 (Methodology Hooks), REQ-SENSE-001, REQ-SENSE-002, REQ-LIFE-010, REQ-SENSE-006",
  "_reference": "ADR-011 (Consciousness Loop), ADR-015 (Sensory Service), ADR-017 (Functor Execution), ADR-CG-006 (Artifact Write Observation)",
  "hooks": {
    "UserPromptSubmit": [
      {
        "matcher": "gen-iterate",
        "hooks": [
          {
            "type": "command",
            "command": "${BEDROCK_PLUGIN_ROOT}/hooks/on-iterate-start.sh",
            "statusMessage": "Setting edge traversal context..."
          }
        ]
      }
    ],
    "Stop": [
      {
        "hooks": [
          {
            "type": "command",
            "command": "${BEDROCK_PLUGIN_ROOT}/hooks/on-stop-check-protocol.sh",
            "statusMessage": "Checking iterate protocol completion..."
          }
        ]
      }
    ],
    "PostEvent": [
      {
        "matcher": "edge_converged",
        "hooks": [
          {
            "type": "command",
            "command": "${BEDROCK_PLUGIN_ROOT}/hooks/on-edge-converged.sh",
            "statusMessage": "Running dev-observer on converged edge..."
          }
        ]
      },
      {
        "matcher": "gaps_validated",
        "hooks": [
          {
            "type": "command",
            "command": "${BEDROCK_PLUGIN_ROOT}/hooks/on-edge-converged.sh",
            "statusMessage": "Running dev-observer on gap validation..."
          }
        ]
      },
      {
        "matcher": "release_created",
        "hooks": [
          {
            "type": "command",
            "command": "${BEDROCK_PLUGIN_ROOT}/hooks/on-edge-converged.sh",
            "statusMessage": "Running dev-observer on release..."
          }
        ]
      }
    ],
    "PostToolUse": [{"matcher": "Write|Edit", "hooks": [{"type": "command", "command": "${BEDROCK_PLUGIN_ROOT}/hooks/on-artifact-written.sh", "statusMessage": "Observing artifact write..."}]}],
    "SessionStart": [
      {
        "hooks": [
          {
            "type": "command",
            "command": "${BEDROCK_PLUGIN_ROOT}/hooks/on-session-start.sh",
            "statusMessage": "Running workspace health check..."
          }
        ]
      }
    ]
  }
}
